<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_gradient_drawable"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".GameSearch"
    tools:deviceIds="wear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingVertical="20dp"
                tools:ignore="NestedWeights"
                android:contentDescription="@string/empty">
            </ImageView>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingVertical="20dp"
                app:srcCompat="@drawable/logoorig_trans"
                android:contentDescription="@string/gamezap_logo">
            </ImageView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingVertical="30dp"
                android:paddingStart="60dp"
                tools:ignore="RtlSymmetry">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/gamePage_IMG_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:civ_border_color="@color/yellow"
                    app:civ_border_width="1dp">
                </de.hdodenhof.circleimageview.CircleImageView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:paddingVertical="5dp"
                tools:ignore="NestedWeights">
                <ImageButton
                    android:id="@+id/gamePage_IMGB_favorite"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:paddingStart="3.5dp"
                    android:paddingTop="2dp"
                    android:scaleType="fitStart"
                    android:background="@android:color/transparent"
                    tools:ignore="RtlSymmetry"
                    android:contentDescription="@string/gamePage_TXT_favoriteIcon" />
                <TextView
                    android:id="@+id/gamePage_TXT_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="14"
                    android:gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:background="@color/blue_heavy"
                android:padding="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/gamePage_IMG_gameCover"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:background="@color/Transparent"
                    android:scaleType="fitXY"
                    tools:ignore="NestedWeights"
                    android:contentDescription="@string/gamePage_TXT_gameCover">
                </ImageView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights">
                    <TextView
                        android:id="@+id/gamePage_TXT_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="20sp"
                        android:textColor="@color/yellow"/>

                    <TextView
                        android:id="@+id/gamePage_TXT_gameDes"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:scrollbars = "vertical"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        tools:ignore="SmallSp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="@string/gamePage_TXT_releaseDate"
                            android:textColor="@color/yellow"/>

                        <TextView
                            android:id="@+id/gamePage_TXT_releaseData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gamePage_RCY_Companies"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="horizontal">
        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>
</RelativeLayout>